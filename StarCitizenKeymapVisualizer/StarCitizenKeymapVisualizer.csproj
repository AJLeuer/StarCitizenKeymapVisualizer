<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="SFML.Net" Version="2.5.0" />
      <PackageReference Include="System.Resources.Extensions" Version="7.0.0-preview.3.22175.4" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Assets.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Assets.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Configuration.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Configuration.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Properties.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Properties.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Assets.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
      <Compile Update="Configuration.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Configuration.resx</DependentUpon>
      </Compile>
      <Compile Update="Properties.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Properties.resx</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
